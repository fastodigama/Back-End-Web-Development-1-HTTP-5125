@model Cumulative1.Models.Teacher
<style>
    body {
    background-color: #F8F5E9;
    padding: 20px;
    margin: 0;
    }

    h1 {
    text-align: center;
    color: #3A7D44;
    font-size: 2.5em;
    margin-bottom: 20px;
    }

   

    p {
    font-size: 1em;
    margin: 10px 0;
    display: flex;
    align-items: center;
    }

    
    label {
    font-weight: bold;
    color: #3A7D44;
    margin-right: 10px;
    flex-basis: 150px; 
    text-align: right; 
    }

    strong {
    color: #DF6D14;
    }
</style>

<h1> Teacher Data: </h1>
<p><label>Teacher ID</label> <strong>@Model.TeatcherId </strong> </p>
<p><label>Teacher First Name </label> <strong>@Model.TeacherFname </strong></p> 
<p><label>Teacher First Name </label> <strong>@Model.TeacherLname </strong></p>
<p><label>Employee Number </label> <strong> @Model.EmployeeNumber </strong>  </p>
<p><label>Hire Date </label> <strong> @Model.HireDate.ToString("yyyy-MM-dd")</strong></p>
<p><label>Salary  </label> <strong> @Model.Salary </strong></p>
<p><label>Teacher Work Phone  </label> <strong> @Model.teacherworkphone</strong></p>
<p class="list">
    <!-- Display the list of courses taught by the teacher -->
    <label>Courses Taught:</label>
    <strong>

       @* Source: https://stackoverflow.com/questions/46833073/how-to-check-if-a-list-of-objects-in-a-model-of-a-view-is-empty-using-razor-synt*@
        <!-- Check if the teacher has any courses assigned -->
        @if (Model.teacherCourses != null && Model.teacherCourses.Any())  // Check if there are any courses
        
        {
            <ul>
                <!-- Loop through each course in the teacher's courses -->
                @foreach (var course in Model.teacherCourses)
                {
                    <li>Course code: @course.courseCode</li>
                    <li>Course name: @course.courseName</li>
                    <li>Start date: @course.startDate.ToString("yyyy-MM-dd")</li>
                    <li>End date: @course.endDate.ToString("yyyy-MM-dd")</li>
                }
            </ul>
        }
        else
        {
            // Show a message when there are no courses

            <p>No courses available for this teacher.</p>
        }
    </strong>

</p>
<a href="/TeacherPage/DeleteConfirm/@Model.TeatcherId">Delete Teacher</a>