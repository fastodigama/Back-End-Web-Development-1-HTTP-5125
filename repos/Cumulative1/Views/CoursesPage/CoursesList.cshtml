@model IEnumerable<Cumulative1.Models.Courses>
<style>
    body {
        background-color: #F9FCFB; 
        font-family: Arial, sans-serif;
        margin: 20px;
    }

    h1, h2 {
        color: #21BF73;
        text-align: center;
    }

    .course-list {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 20px;
        margin-top: 20px;
    }

    .course-card {
        width: 300px; 
        height: 200px; 
        background-color: #B0EACD;
        border: 2px solid #21BF73;
        border-radius: 8px;
        padding: 10px;
        margin-bottom:50px;
        display: flex;
        flex-direction: column;
        justify-content: space-evenly; 
        align-items: center; 
        text-align: center; 
        box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.1);
        transition: transform 0.2s, box-shadow 0.2s;
    }

        .course-card:hover {
            transform: scale(1.05);
            box-shadow: 4px 4px 10px rgba(0, 0, 0, 0.2);
    }


        .course-card label {
            font-weight: bold;
            color: #FD5E53; /* Coral color */
        }

        .course-card .value {
            color: #333; /* Neutral text color */
        }

    a {
        text-decoration: none; /* Remove underline from links */
    }
 </style>  
<h1>Read functionality for Courses</h1>

<h2>Select Course for more information</h2>

<div class="course-list">
    <!-- Loop through each courses in the Model -->
    @foreach (Courses courses in Model)
    {
        <!-- Link to the Course Show page -->
        <a href="/CoursesPage/CourseShow/@courses.courseId">
            <!-- Card containing course information -->
            <div class="course-card">
                <!-- Display the Course  name -->
                <p><label>Course Name:</label> <span class="value">@courses.courseName</span></p>
                <!-- Display the Course Code -->
                <p><label>Course Code:</label> <span class="value">@courses.courseCode</span></p>
            </div>
        </a>
    }
</div>