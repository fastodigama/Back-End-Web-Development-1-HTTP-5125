@model Cumulative1.Models.Students
<style>
    body {
        background-color: #F5F5F5;
        padding: 20px;
        margin: 0;
    }

    h1 {
        text-align: center;
        color: #FC5185;
        font-size: 2.5em;
        margin-bottom: 20px;
    }



    p {
        font-size: 1em;
        margin: 10px 0;
        display: flex;
        align-items: center;
    }


    label {
        font-weight: bold;
        color: #3FC1C9;
        margin-right: 10px;
        flex-basis: 150px;
        text-align: right;
    }

    strong {
        color: #364F6B;
    }
    </style>

<h1> Student Data: </h1>
<!-- Display the student's information -->
<p><label>Student ID</label> <strong>@Model.StudentId </strong> </p>
<p><label>Student First Name </label> <strong>@Model.StudentFName </strong></p>
<p><label>Student First Name </label> <strong>@Model.StudentLName </strong></p>
<p><label>Student Number </label> <strong> @Model.studentnumber </strong>  </p>
<p><label>Enroll Date </label> <strong> @Model.StudentEnrolDate.ToString("yyyy-MM-dd")</strong></p>
<a href="/StudentPage/StudentDeleteConfirm/@Model.StudentId">Delete This student</a>

